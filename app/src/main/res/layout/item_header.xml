<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray_light"
    android:layout_height="45dp">

    <TextView
        android:id="@+id/tv_local"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Local"
        android:background="@drawable/shape_bg_line"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_today"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/shape_bg_line"
        android:text="Today"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/tv_tomorrow"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_local" />

    <TextView
        android:id="@+id/tv_tomorrow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Tomorrow"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_today" />

</androidx.constraintlayout.widget.ConstraintLayout>